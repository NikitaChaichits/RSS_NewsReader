    <!-- Splash theme -->
    <style name="TranslucentSplash" parent="Theme.iven.custom">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorAccent">@color/quantum_grey</item>
    </style>

    <style name="Theme.iven.custom" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="App.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation
        </item>
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorTextView</item>
        <item name="back_icon">@drawable/ic_back</item>
        <item name="share_icon">@drawable/ic_share</item>
        <item name="plus_icon">@drawable/ic_plus</item>
        <item name="webview_icon">@drawable/ic_webview</item>
    </style>

    <style name="Base.Theme" parent="App.Theme">
        <item name="colorAccent">@android:color/black</item>
        <item name="ripple_color">@android:color/black</item>
    </style>

    <style name="App.Theme.Dark" parent="Theme.AppCompat.NoActionBar">
